<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/blue_90</item>
        <item name="colorPrimaryDark">@color/blue_90</item>
        <item name="android:windowBackground">@color/blue_90</item>
    </style>
    <style name="Widget.MaterialComponents.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/header_sign_gray</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/hint_gray</item>
    </style>
    <style name="PinButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="ShapeAppearanceOverlay.FabNotch" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="NavigationDrawerStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">#00AEEF</item>
        <item name="itemTextColor">#FFFFFF</item>
        <item name="itemIconTint">#FFFFFF</item>
    </style>
    <style name="Theme.MyApplication.NoActionBar" parent="Theme.MyApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>